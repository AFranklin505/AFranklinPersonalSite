@page "/counter"
@inject CounterClass CounterClass

<PageTitle>Counter</PageTitle>
<div id="mainContent">
<div id="subWindow">
    <h1>Counter</h1>

    <p role="status">Current count: @CounterClass.CurrentCount</p>

    <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
</div>
</div>
@code {

    private void IncrementCount()
    {
        // ** SESSION STATE
        int CurrentCount = CounterClass.CurrentCount;
        CurrentCount++;
        // Set Current count on the Session State object
        CounterClass.CurrentCount++;
    }
}
